<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp" android:paddingVertical="45dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/heading_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/nunito_bold"
            android:text="BioWiki"
            android:textColor="#555555"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/heading_label"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>
    <EditText
        android:id="@+id/namecircle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/radius"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Enter name of species"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/radius"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Enter radius"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="9dp">

        <ImageView
            android:id="@+id/imgcircle"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            app:srcCompat="@drawable/image" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="35dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/okbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cancel"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:text="OK" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:text="Cancel" />

    </LinearLayout>

</LinearLayout>